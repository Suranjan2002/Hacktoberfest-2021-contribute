// sum od digits
import java.util.*;
public class sum
{
    public static void main()
    {
        Scanner sc= new Scanner(System.in);
        System.out.println("Enter a number");
        int n=sc.nextInt();
        int i=0,d=0,s=0;
        for(i=n;i>0;i=i/10)
        {
            d=i%10; 
            s=s+d;
        }
        System.out.println("Sum of digits="+s);
    }
}
